#version 330 core

uniform sampler2D textureUnit0;

in vec3 normal;
in vec2 texCoord0;
in vec3 position;

layout (location = 0) out vec4 vOutColorData;  
layout (location = 1) out vec3 vOutPositionData;  
layout (location = 2) out vec3 vOutNormalData;  

void main()
{
    vOutPositionData = position;
    vOutNormalData = normal;
    vOutColorData = texture2D(textureUnit0, texCoord0);
}