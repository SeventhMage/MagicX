#version 330 core

uniform sampler2D textureUnit0;

in vec3 normal;
in vec2 texCoord0;
in vec3 position;

layout (location = 0) out vec4 vOutColorData;  
layout (location = 1) out vec4 vOutPositionData;  
layout (location = 2) out vec4 vOutNormalData;  

void main()
{
    vOutPositionData = vec4(position.xyz, 1.0);
    vOutNormalData = vec4(normalize(normal).xyz, 1.0);
    vOutColorData = vec4(0.4, 0.9, 0.7, 1.0);//texture2D(textureUnit0, texCoord0);
}