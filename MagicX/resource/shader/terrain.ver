#version 330 core

attribute vec3 vPosition;
attribute vec2 vTexCoord0;

uniform mat4 mvpMatrix;
varying vec4 color;
varying vec2 vTex;

void main()
{
	color.rgb = vec3(max(abs(vPosition.y) / 128, 0.1f), max(abs(vPosition.y) / 128, 0.1f), max(abs(vPosition.y) / 128, 0.1f));
	vTex = vTexCoord0;
	gl_Position = mvpMatrix * vec4(vPosition.xyz, 1.0);
}